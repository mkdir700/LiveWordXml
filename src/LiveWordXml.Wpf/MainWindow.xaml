<Window x:Class="LiveWordXml.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:LiveWordXml.Wpf.Views"
        xmlns:models="clr-namespace:LiveWordXml.Wpf.Models"
        xmlns:local="clr-namespace:LiveWordXml.Wpf"
        Title="LiveWordXml - Modern XML Extractor"
        Height="700"
        Width="1200"
        MinHeight="700"
        MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        Icon="{StaticResource AppIconDrawing}"
        Background="{StaticResource BackgroundBrush}">

    <Window.Resources>
        <!-- Toolbar Style -->
        <Style x:Key="ToolbarStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness"
                    Value="0,0,0,1"/>
            <Setter Property="Padding"
                    Value="24,16"/>
        </Style>

        <!-- Stats Card Style -->
        <Style x:Key="StatsCardStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="6"/>
            <Setter Property="Padding"
                    Value="16,12"/>
            <Setter Property="Margin"
                    Value="4"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000"
                                      Opacity="0.05"
                                      BlurRadius="4"
                                      ShadowDepth="1"
                                      Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Panel Header Style -->
        <Style x:Key="PanelHeaderStyle"
               TargetType="Grid">
            <Setter Property="Background"
                    Value="{StaticResource SurfaceVariantBrush}"/>
            <Setter Property="Margin"
                    Value="-20,-20,-20,16"/>
        </Style>

        <!-- Panel Header Text Style -->
        <Style x:Key="PanelHeaderTextStyle"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="16"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="Foreground"
                    Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Margin"
                    Value="20,12"/>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource SecondaryButtonStyle}">
            <Setter Property="Padding"
                    Value="12,6"/>
            <Setter Property="FontSize"
                    Value="13"/>
            <Setter Property="Margin"
                    Value="4,0"/>
        </Style>

        <!-- Primary Action Button Style -->
        <Style x:Key="PrimaryActionButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Padding"
                    Value="16,8"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Margin"
                    Value="4,0"/>
        </Style>

        <!-- TextBox with Placeholder Style -->
        <Style x:Key="PlaceholderTextBoxStyle"
               TargetType="TextBox">
            <Setter Property="Background"
                    Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground"
                    Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Padding"
                    Value="12,8"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="Top"/>
                                <TextBlock x:Name="PlaceholderText"
                                           Text="{TemplateBinding Tag}"
                                           Foreground="{StaticResource TextTertiaryBrush}"
                                           Margin="{TemplateBinding Padding}"
                                           VerticalAlignment="Top"
                                           IsHitTestVisible="False"
                                           FontStyle="Italic"
                                           Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Focus state styling -->
                            <Trigger Property="IsFocused"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="border"
                                        Property="BorderThickness"
                                        Value="2"/>
                            </Trigger>

                            <!-- Mouse over styling -->
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="{StaticResource BorderVariantBrush}"/>
                            </Trigger>

                            <!-- Show placeholder only when text is empty AND not focused -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text"
                                               Value=""/>
                                    <Condition Property="IsFocused"
                                               Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="PlaceholderText"
                                        Property="Visibility"
                                        Value="Visible"/>
                            </MultiTrigger>

                            <!-- Show placeholder only when text is null AND not focused -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text"
                                               Value="{x:Null}"/>
                                    <Condition Property="IsFocused"
                                               Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="PlaceholderText"
                                        Property="Visibility"
                                        Value="Visible"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Toolbar -->
        <Border Grid.Row="0"
                Style="{StaticResource ToolbarStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Text Input"
                           Style="{StaticResource SubheaderTextStyle}"
                           Margin="0,0,0,12"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             x:Name="TextBoxSelectedText"
                             Text="{Binding SelectedText, UpdateSourceTrigger=PropertyChanged}"
                             Height="80"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,16,0"
                             VerticalContentAlignment="Top"
                             Style="{StaticResource PlaceholderTextBoxStyle}"
                             Tag="Enter keywords to search"/>

                    <StackPanel Grid.Column="1"
                                Orientation="Vertical"
                                VerticalAlignment="Top"
                                Margin="0,0,0,0">
                        <Button x:Name="ButtonLoadDocument"
                                Command="{Binding LoadDocumentCommand}"
                                Style="{StaticResource PrimaryActionButtonStyle}"
                                Width="140"
                                Margin="0,0,0,8"
                                Tag="{StaticResource FolderIcon}">
                            <TextBlock Text="Load Document"/>
                        </Button>

                        <Button x:Name="ButtonRefreshDocument"
                                Command="{Binding RefreshDocumentCommand}"
                                Style="{StaticResource ActionButtonStyle}"
                                Width="140"
                                Margin="0,0,0,0"
                                IsEnabled="{Binding IsDocumentLoaded}"
                                Tag="{StaticResource RefreshIcon}">
                            <TextBlock Text="Refresh"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2"
              Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*"
                                  MinWidth="300"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2.5*"
                                  MinWidth="300"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="4*"
                                  MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- Matches Panel -->
            <Border Grid.Column="0"
                    x:Name="MatchesPanel"
                    Style="{StaticResource ModernCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Panel Header -->
                    <Grid Grid.Row="0"
                          Style="{StaticResource PanelHeaderStyle}">
                        <TextBlock Text="ðŸŽ¯ XML Matches"
                                   Style="{StaticResource PanelHeaderTextStyle}"/>
                    </Grid>

                    <!-- Matches List -->
                    <ListView Grid.Row="1"
                              x:Name="ListViewMatches"
                              ItemsSource="{Binding MatchedElements}"
                              SelectedItem="{Binding SelectedMatch}"
                              SelectionMode="Single"
                              BorderThickness="0"
                              Background="Transparent">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Index"
                                                Width="60">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{StaticResource SecondaryBrush}"
                                                    CornerRadius="12"
                                                    Padding="8,4"
                                                    HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding Index}"
                                                           FontWeight="SemiBold"
                                                           FontSize="12"
                                                           Foreground="{StaticResource PrimaryBrush}"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Element Type"
                                                Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ElementType}"
                                                       FontWeight="Medium"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Preview"
                                                Width="220">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Preview}"
                                                       TextTrimming="CharacterEllipsis"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       ToolTip="{Binding Preview}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <!-- Navigation Controls -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,16,0,0">
                        <Button x:Name="ButtonPrevious"
                                Command="{Binding PreviousCommand}"
                                Style="{StaticResource ActionButtonStyle}"
                                Width="90"
                                Tag="{StaticResource PreviousIcon}">
                            <TextBlock Text="Previous"/>
                        </Button>
                        <Button x:Name="ButtonNext"
                                Command="{Binding NextCommand}"
                                Style="{StaticResource ActionButtonStyle}"
                                Width="90"
                                Tag="{StaticResource NextIcon}">
                            <TextBlock Text="Next"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1"
                          x:Name="Splitter1"
                          Width="8"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"/>

            <!-- Document Structure Panel -->
            <Border Grid.Column="2"
                    x:Name="StructurePanel"
                    Style="{StaticResource ModernCardStyle}"
                    Visibility="{Binding IsStructureTreeVisible, Converter={x:Static local:BooleanToVisibilityConverter.Default}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Panel Header -->
                    <Grid Grid.Row="0"
                          Style="{StaticResource PanelHeaderStyle}">
                        <Grid Margin="20,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="ðŸ“‹ Document Structure"
                                       Style="{StaticResource PanelHeaderTextStyle}"
                                       Margin="0"/>

                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal">
                                <Button x:Name="ButtonExpandAll"
                                        Command="{Binding ExpandAllCommand}"
                                        Style="{StaticResource IconButtonStyle}"
                                        ToolTip="Expand All">
                                    <TextBlock Text="{StaticResource ExpandIcon}"
                                               Style="{StaticResource IconTextStyle}"/>
                                </Button>
                                <Button x:Name="ButtonCollapseAll"
                                        Command="{Binding CollapseAllCommand}"
                                        Style="{StaticResource IconButtonStyle}"
                                        ToolTip="Collapse All">
                                    <TextBlock Text="{StaticResource CollapseIcon}"
                                               Style="{StaticResource IconTextStyle}"/>
                                </Button>
                                <Button x:Name="ButtonRefreshStructure"
                                        Command="{Binding RefreshStructureCommand}"
                                        Style="{StaticResource IconButtonStyle}"
                                        ToolTip="Refresh Structure">
                                    <TextBlock Text="{StaticResource RefreshIcon}"
                                               Style="{StaticResource IconTextStyle}"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!-- Content Area with Loading Overlay -->
                    <Grid Grid.Row="1">
                        <!-- Tree View -->
                        <TreeView x:Name="DocumentStructureTreeView"
                                  ItemsSource="{Binding DocumentStructure.Children}"
                                  SelectedItemChanged="DocumentStructureTreeView_SelectedItemChanged"
                                  BorderThickness="0"
                                  Background="Transparent">
                            <TreeView.Resources>
                                <HierarchicalDataTemplate DataType="{x:Type models:DocumentStructureNode}"
                                                          ItemsSource="{Binding Children}">
                                    <Border Background="{Binding IsHighlighted, Converter={x:Static local:HighlightBackgroundConverter.Instance}}"
                                            CornerRadius="4"
                                            Padding="4,2">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Icon}"
                                                       Margin="0,0,6,0"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Name}"
                                                       VerticalAlignment="Center"
                                                       ToolTip="{Binding TextPreview}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                        </StackPanel>
                                    </Border>
                                </HierarchicalDataTemplate>
                            </TreeView.Resources>
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="TreeViewItem">
                                    <Setter Property="IsExpanded"
                                            Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                    <Setter Property="IsSelected"
                                            Value="{Binding IsSelected, Mode=TwoWay}"/>
                                    <Setter Property="Margin"
                                            Value="0,1"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsHighlighted}"
                                                     Value="True">
                                            <Setter Property="Background"
                                                    Value="{StaticResource SecondaryBrush}"/>
                                        </DataTrigger>
                                        <!-- Custom template for nodes with potential children -->
                                        <DataTrigger Binding="{Binding HasPotentialChildren}"
                                                     Value="True">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TreeViewItem">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition MinWidth="19"
                                                                                  Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition/>
                                                            </Grid.RowDefinitions>

                                                            <!-- Custom Expander Button -->
                                                            <ToggleButton x:Name="Expander"
                                                                          Grid.Column="0"
                                                                          ClickMode="Press"
                                                                          IsChecked="{Binding Path=IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                                                          Margin="1,0,1,0"
                                                                          Width="16"
                                                                          Height="16"
                                                                          Focusable="False">
                                                                <ToggleButton.Style>
                                                                    <Style TargetType="ToggleButton">
                                                                        <Setter Property="Template">
                                                                            <Setter.Value>
                                                                                <ControlTemplate TargetType="ToggleButton">
                                                                                    <Border Background="Transparent"
                                                                                            Width="16"
                                                                                            Height="16">
                                                                                        <Path x:Name="ExpandPath"
                                                                                              HorizontalAlignment="Center"
                                                                                              VerticalAlignment="Center"
                                                                                              Margin="1,1,1,1"
                                                                                              Fill="{StaticResource TextPrimaryBrush}"
                                                                                              Data="M 4 6 L 6 4 L 6 8 Z"/>
                                                                                    </Border>
                                                                                    <ControlTemplate.Triggers>
                                                                                        <Trigger Property="IsChecked"
                                                                                                 Value="True">
                                                                                            <Setter Property="Data"
                                                                                                    TargetName="ExpandPath"
                                                                                                    Value="M 4 4 L 8 6 L 4 8 Z"/>
                                                                                        </Trigger>
                                                                                    </ControlTemplate.Triggers>
                                                                                </ControlTemplate>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Style>
                                                                </ToggleButton.Style>
                                                            </ToggleButton>

                                                            <!-- Content -->
                                                            <Border x:Name="Bd"
                                                                    Grid.Column="1"
                                                                    Grid.ColumnSpan="2"
                                                                    Background="{TemplateBinding Background}"
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter x:Name="PART_Header"
                                                                                  ContentSource="Header"
                                                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                                                            </Border>

                                                            <!-- Children -->
                                                            <ItemsPresenter x:Name="ItemsHost"
                                                                            Grid.Row="1"
                                                                            Grid.Column="1"
                                                                            Grid.ColumnSpan="2"/>
                                                        </Grid>

                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsExpanded"
                                                                     Value="false">
                                                                <Setter TargetName="ItemsHost"
                                                                        Property="Visibility"
                                                                        Value="Collapsed"/>
                                                            </Trigger>
                                                            <Trigger Property="IsSelected"
                                                                     Value="true">
                                                                <Setter TargetName="Bd"
                                                                        Property="Background"
                                                                        Value="{StaticResource PrimaryBrush}"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TreeView.ItemContainerStyle>
                        </TreeView>


                    </Grid>


                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="3"
                          x:Name="Splitter2"
                          Width="8"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"/>

            <!-- XML Preview Panel -->
            <Border Grid.Column="4"
                    x:Name="XmlPreviewPanel"
                    Style="{StaticResource ModernCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Panel Header -->
                    <Grid Grid.Row="0"
                          Style="{StaticResource PanelHeaderStyle}">
                        <Grid Margin="20,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="ðŸ“„ XML Preview"
                                       Style="{StaticResource PanelHeaderTextStyle}"
                                       Margin="0"/>

                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <CheckBox x:Name="CheckBoxFormatted"
                                          Content="Formatted"
                                          IsChecked="{Binding IsFormattedXml}"
                                          Margin="0,0,12,0"/>
                                <Button x:Name="ButtonScrollToSearch"
                                        Command="{Binding ScrollToSearchCommand}"
                                        Style="{StaticResource IconButtonStyle}"
                                        ToolTip="Find and highlight search text in XML">
                                    <TextBlock Text="{StaticResource SearchIcon}"
                                               Style="{StaticResource IconTextStyle}"/>
                                </Button>
                                <Button x:Name="ButtonFullscreen"
                                        Click="ButtonFullscreen_Click"
                                        Style="{StaticResource IconButtonStyle}"
                                        ToolTip="Toggle Fullscreen XML Preview">
                                    <TextBlock Text="{StaticResource FullScreenIcon}"
                                               Style="{StaticResource IconTextStyle}"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!-- Node Details Panel -->
                    <Border Grid.Row="1"
                            Background="{StaticResource SurfaceVariantBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,0,1"
                            Margin="0,0,0,8"
                            Visibility="{Binding SelectedStructureNode, Converter={StaticResource NullToVisibilityConverter}}">
                        <Expander Header="ðŸ“‹ Node Details"
                                  IsExpanded="True"
                                  Margin="8">
                            <Grid Margin="8,8,8,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Node Type -->
                                <TextBlock Grid.Row="0"
                                           Grid.Column="0"
                                           Text="Type:"
                                           FontWeight="SemiBold"
                                           Margin="0,0,8,4"
                                           VerticalAlignment="Top"/>
                                <TextBlock Grid.Row="0"
                                           Grid.Column="1"
                                           Text="{Binding SelectedStructureNode.NodeType}"
                                           Margin="0,0,0,4"
                                           TextWrapping="Wrap"/>

                                <!-- XPath -->
                                <TextBlock Grid.Row="1"
                                           Grid.Column="0"
                                           Text="XPath:"
                                           FontWeight="SemiBold"
                                           Margin="0,0,8,4"
                                           VerticalAlignment="Top"/>
                                <TextBlock Grid.Row="1"
                                           Grid.Column="1"
                                           Text="{Binding SelectedStructureNode.XPath}"
                                           Margin="0,0,0,4"
                                           TextWrapping="Wrap"
                                           FontFamily="Consolas"/>

                                <!-- Text Preview -->
                                <TextBlock Grid.Row="2"
                                           Grid.Column="0"
                                           Text="Preview:"
                                           FontWeight="SemiBold"
                                           Margin="0,0,8,4"
                                           VerticalAlignment="Top"/>
                                <TextBlock Grid.Row="2"
                                           Grid.Column="1"
                                           Text="{Binding SelectedStructureNode.TextPreview}"
                                           Margin="0,0,0,4"
                                           TextWrapping="Wrap"
                                           FontStyle="Italic"/>

                                <!-- Attributes -->
                                <TextBlock Grid.Row="3"
                                           Grid.Column="0"
                                           Text="Attributes:"
                                           FontWeight="SemiBold"
                                           Margin="0,0,8,4"
                                           VerticalAlignment="Top"/>
                                <TextBlock Grid.Row="3"
                                           Grid.Column="1"
                                           Text="{Binding SelectedStructureNode.AttributesInfo}"
                                           Margin="0,0,0,4"
                                           TextWrapping="Wrap"
                                           FontFamily="Consolas"
                                           FontSize="11"/>
                            </Grid>
                        </Expander>
                    </Border>

                    <!-- XML Editor -->
                    <views:XmlEditor Grid.Row="2"
                                     x:Name="XmlPreviewEditor"
                                     XmlText="{Binding SelectedXml, Mode=OneWay}"
                                     SearchText="{Binding SearchHighlightText, Mode=OneWay}"/>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="3"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,16,0,0">
                        <Button x:Name="ButtonCopyXml"
                                Command="{Binding CopyXmlCommand}"
                                Style="{StaticResource ActionButtonStyle}"
                                Width="110"
                                Tag="{StaticResource CopyIcon}">
                            <TextBlock Text="Copy XML"/>
                        </Button>
                        <Button x:Name="ButtonSaveXml"
                                Command="{Binding SaveXmlCommand}"
                                Style="{StaticResource PrimaryActionButtonStyle}"
                                Width="110"
                                Tag="{StaticResource SaveIcon}">
                            <TextBlock Text="Save XML"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="24,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           Style="{StaticResource BodyTextStyle}"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock x:Name="DocumentStatus"
                               Text="{Binding DocumentStatus}"
                               Style="{StaticResource BodyTextStyle}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,16,0"/>
                    <Border Style="{StaticResource StatusIndicatorStyle}"
                            Background="{StaticResource SuccessBrush}"
                            Margin="0,0,6,0"/>
                    <TextBlock Text="Running"
                               Style="{StaticResource CaptionTextStyle}"
                               Margin="0,0,16,0"/>
                    <TextBlock Text="LiveWordXml v1.0"
                               Style="{StaticResource CaptionTextStyle}"
                               Margin="0,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
