<Window x:Class="LiveWordXml.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:LiveWordXml.Wpf.Views"
        Title="LiveWordXml - Modern XML Extractor"
        Height="700"
        Width="1200"
        MinHeight="600"
        MinWidth="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="ModernCardStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="#F8F9FA"/>
            <Setter Property="BorderBrush"
                    Value="#DEE2E6"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="4"/>
            <Setter Property="Padding"
                    Value="16"/>
            <Setter Property="Margin"
                    Value="8"/>
        </Style>

        <Style x:Key="HeaderTextStyle"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="16"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="Margin"
                    Value="0,0,0,12"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0"
                Style="{StaticResource ModernCardStyle}">
            <StackPanel>
                <TextBlock Text="Document &amp; Text Input"
                           Style="{StaticResource HeaderTextStyle}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             x:Name="TextBoxSelectedText"
                             Text="{Binding SelectedText, UpdateSourceTrigger=PropertyChanged}"
                             Height="80"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,12,0"/>

                    <Button Grid.Column="1"
                            x:Name="ButtonLoadDocument"
                            Command="{Binding LoadDocumentCommand}"
                            Content="Load Document"
                            Width="120"
                            Height="32"
                            VerticalAlignment="Top"
                            Margin="0,0,8,0"/>

                    <Button Grid.Column="2"
                            x:Name="ButtonRefreshDocument"
                            Command="{Binding RefreshDocumentCommand}"
                            Content="ðŸ”„ Refresh"
                            Width="80"
                            Height="32"
                            VerticalAlignment="Top"
                            IsEnabled="{Binding IsDocumentLoaded}"/>
                </Grid>

                <TextBlock x:Name="DocumentStatus"
                           Text="{Binding DocumentStatus}"
                           Margin="0,8,0,0"
                           Foreground="Gray"/>
            </StackPanel>
        </Border>

        <!-- Match Statistics -->
        <Border Grid.Row="1"
                Style="{StaticResource ModernCardStyle}"
                Margin="8,0,8,8">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <TextBlock Text="{Binding MatchCount, StringFormat='Matches Found: {0}'}"
                           FontWeight="SemiBold"
                           Margin="0,0,24,0"/>
                <TextBlock Text="{Binding CurrentMatchInfo}"
                           Foreground="Gray"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Matches List -->
            <Border Grid.Column="0"
                    Style="{StaticResource ModernCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="XML Matches"
                               Style="{StaticResource HeaderTextStyle}"/>

                    <ListView Grid.Row="1"
                              x:Name="ListViewMatches"
                              ItemsSource="{Binding MatchedElements}"
                              SelectedItem="{Binding SelectedMatch}"
                              SelectionMode="Single">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Match"
                                                Width="80"
                                                DisplayMemberBinding="{Binding Index}"/>
                                <GridViewColumn Header="Element Type"
                                                Width="100"
                                                DisplayMemberBinding="{Binding ElementType}"/>
                                <GridViewColumn Header="Preview"
                                                Width="200"
                                                DisplayMemberBinding="{Binding Preview}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <!-- Navigation Controls -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,12,0,0">
                        <Button x:Name="ButtonPrevious"
                                Command="{Binding PreviousCommand}"
                                Content="â—€ Previous"
                                Width="80"
                                Margin="0,0,8,0"/>
                        <Button x:Name="ButtonNext"
                                Command="{Binding NextCommand}"
                                Content="Next â–¶"
                                Width="80"/>
                    </StackPanel>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Background="LightGray"/>

            <!-- XML Preview -->
            <Border Grid.Column="2"
                    Style="{StaticResource ModernCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal">
                        <TextBlock Text="XML Preview"
                                   Style="{StaticResource HeaderTextStyle}"
                                   VerticalAlignment="Center"/>
                        <CheckBox x:Name="CheckBoxFormatted"
                                  Content="Formatted"
                                  IsChecked="{Binding IsFormattedXml}"
                                  Margin="16,0,0,0"
                                  VerticalAlignment="Center"/>
                        <Button x:Name="ButtonScrollToSearch"
                                Command="{Binding ScrollToSearchCommand}"
                                Content="ðŸ” Find in XML"
                                Width="100"
                                Height="24"
                                Margin="16,0,0,0"
                                VerticalAlignment="Center"
                                ToolTip="Scroll to and highlight search text in XML"/>
                    </StackPanel>

                    <views:XmlEditor Grid.Row="1"
                                     x:Name="XmlPreviewEditor"
                                     XmlText="{Binding SelectedXml, Mode=OneWay}"
                                     SearchText="{Binding SearchHighlightText, Mode=OneWay}"/>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,12,0,0">
                        <Button x:Name="ButtonCopyXml"
                                Command="{Binding CopyXmlCommand}"
                                Content="Copy XML"
                                Width="100"
                                Margin="0,0,8,0"/>
                        <Button x:Name="ButtonSaveXml"
                                Command="{Binding SaveXmlCommand}"
                                Content="Save XML"
                                Width="100"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3"
                Background="#F8F9FA"
                BorderBrush="#DEE2E6"
                BorderThickness="0,1,0,0"
                Padding="12,8">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <TextBlock Text="Ready"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>
                    <Ellipse Width="8"
                             Height="8"
                             Fill="LimeGreen"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
