<Window x:Class="LiveWordXml.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:LiveWordXml.Wpf.Views"
        xmlns:models="clr-namespace:LiveWordXml.Wpf.Models"
        xmlns:local="clr-namespace:LiveWordXml.Wpf"
        Title="LiveWordXml - Modern XML Extractor"
        Height="700"
        Width="1200"
        MinHeight="700"
        MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        Icon="{StaticResource AppIconDrawing}"
        Background="{StaticResource BackgroundBrush}">

    <Window.Resources>
        <!-- Toolbar Style -->
        <Style x:Key="ToolbarStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness"
                    Value="0,0,0,1"/>
            <Setter Property="Padding"
                    Value="24,16"/>
        </Style>

        <!-- Stats Card Style -->
        <Style x:Key="StatsCardStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="6"/>
            <Setter Property="Padding"
                    Value="16,12"/>
            <Setter Property="Margin"
                    Value="4"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000"
                                      Opacity="0.05"
                                      BlurRadius="4"
                                      ShadowDepth="1"
                                      Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Panel Header Style -->
        <Style x:Key="PanelHeaderStyle"
               TargetType="Grid">
            <Setter Property="Background"
                    Value="{StaticResource SurfaceVariantBrush}"/>
            <Setter Property="Margin"
                    Value="-20,-20,-20,16"/>
        </Style>

        <!-- Panel Header Text Style -->
        <Style x:Key="PanelHeaderTextStyle"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="16"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="Foreground"
                    Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Margin"
                    Value="20,12"/>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource SecondaryButtonStyle}">
            <Setter Property="Padding"
                    Value="12,6"/>
            <Setter Property="FontSize"
                    Value="13"/>
            <Setter Property="Margin"
                    Value="4,0"/>
        </Style>

        <!-- Primary Action Button Style -->
        <Style x:Key="PrimaryActionButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Padding"
                    Value="16,8"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Margin"
                    Value="4,0"/>
        </Style>

        <!-- TextBox with Placeholder Style -->
        <Style x:Key="PlaceholderTextBoxStyle"
               TargetType="TextBox">
            <Setter Property="Background"
                    Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground"
                    Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Padding"
                    Value="12,8"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="Top"/>
                                <TextBlock x:Name="PlaceholderText"
                                           Text="{TemplateBinding Tag}"
                                           Foreground="{StaticResource TextTertiaryBrush}"
                                           Margin="{TemplateBinding Padding}"
                                           VerticalAlignment="Top"
                                           IsHitTestVisible="False"
                                           FontStyle="Italic"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="border"
                                        Property="BorderThickness"
                                        Value="2"/>
                                <Setter TargetName="PlaceholderText"
                                        Property="Visibility"
                                        Value="Collapsed"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="{StaticResource BorderVariantBrush}"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text"
                                               Value=""/>
                                    <Condition Property="IsFocused"
                                               Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="PlaceholderText"
                                        Property="Visibility"
                                        Value="Visible"/>
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text"
                                               Value="{x:Null}"/>
                                    <Condition Property="IsFocused"
                                               Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="PlaceholderText"
                                        Property="Visibility"
                                        Value="Visible"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Toolbar -->
        <Border Grid.Row="0"
                Style="{StaticResource ToolbarStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Text Input"
                           Style="{StaticResource SubheaderTextStyle}"
                           Margin="0,0,0,12"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             x:Name="TextBoxSelectedText"
                             Text="{Binding SelectedText, UpdateSourceTrigger=PropertyChanged}"
                             Height="80"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,16,0"
                             VerticalContentAlignment="Top"
                             Style="{StaticResource PlaceholderTextBoxStyle}"
                             Tag="Enter keywords to search"/>

                    <StackPanel Grid.Column="1"
                                Orientation="Vertical"
                                VerticalAlignment="Top"
                                Margin="0,0,0,0">
                        <Button x:Name="ButtonLoadDocument"
                                Command="{Binding LoadDocumentCommand}"
                                Style="{StaticResource PrimaryActionButtonStyle}"
                                Width="120"
                                Margin="0,0,0,8"
                                Tag="{StaticResource FolderIcon}">
                            <TextBlock Text="Load Document"/>
                        </Button>

                        <Button x:Name="ButtonRefreshDocument"
                                Command="{Binding RefreshDocumentCommand}"
                                Style="{StaticResource ActionButtonStyle}"
                                Width="120"
                                Margin="0,0,0,0"
                                IsEnabled="{Binding IsDocumentLoaded}"
                                Tag="{StaticResource RefreshIcon}">
                            <TextBlock Text="Refresh"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2"
              Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*"
                                  MinWidth="300"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2.5*"
                                  MinWidth="300"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="4*"
                                  MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- Matches Panel -->
            <Border Grid.Column="0"
                    Style="{StaticResource ModernCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Panel Header -->
                    <Grid Grid.Row="0"
                          Style="{StaticResource PanelHeaderStyle}">
                        <TextBlock Text="🎯 XML Matches"
                                   Style="{StaticResource PanelHeaderTextStyle}"/>
                    </Grid>

                    <!-- Matches List -->
                    <ListView Grid.Row="1"
                              x:Name="ListViewMatches"
                              ItemsSource="{Binding MatchedElements}"
                              SelectedItem="{Binding SelectedMatch}"
                              SelectionMode="Single"
                              BorderThickness="0"
                              Background="Transparent">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Index"
                                                Width="60">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{StaticResource SecondaryBrush}"
                                                    CornerRadius="12"
                                                    Padding="8,4"
                                                    HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding Index}"
                                                           FontWeight="SemiBold"
                                                           FontSize="12"
                                                           Foreground="{StaticResource PrimaryBrush}"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Element Type"
                                                Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ElementType}"
                                                       FontWeight="Medium"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Preview"
                                                Width="220">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Preview}"
                                                       TextTrimming="CharacterEllipsis"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       ToolTip="{Binding Preview}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <!-- Navigation Controls -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,16,0,0">
                        <Button x:Name="ButtonPrevious"
                                Command="{Binding PreviousCommand}"
                                Style="{StaticResource ActionButtonStyle}"
                                Width="90"
                                Tag="{StaticResource PreviousIcon}">
                            <TextBlock Text="Previous"/>
                        </Button>
                        <Button x:Name="ButtonNext"
                                Command="{Binding NextCommand}"
                                Style="{StaticResource ActionButtonStyle}"
                                Width="90"
                                Tag="{StaticResource NextIcon}">
                            <TextBlock Text="Next"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1"
                          Width="8"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"/>

            <!-- Document Structure Panel -->
            <Border Grid.Column="2"
                    Style="{StaticResource ModernCardStyle}"
                    Visibility="{Binding IsStructureTreeVisible, Converter={x:Static local:BooleanToVisibilityConverter.Default}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Panel Header -->
                    <Grid Grid.Row="0"
                          Style="{StaticResource PanelHeaderStyle}">
                        <Grid Margin="20,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="📋 Document Structure"
                                       Style="{StaticResource PanelHeaderTextStyle}"
                                       Margin="0"/>

                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal">
                                <Button x:Name="ButtonExpandAll"
                                        Command="{Binding ExpandAllCommand}"
                                        Style="{StaticResource IconButtonStyle}"
                                        ToolTip="Expand All">
                                    <TextBlock Text="{StaticResource ExpandIcon}"
                                               Style="{StaticResource IconTextStyle}"/>
                                </Button>
                                <Button x:Name="ButtonCollapseAll"
                                        Command="{Binding CollapseAllCommand}"
                                        Style="{StaticResource IconButtonStyle}"
                                        ToolTip="Collapse All">
                                    <TextBlock Text="{StaticResource CollapseIcon}"
                                               Style="{StaticResource IconTextStyle}"/>
                                </Button>
                                <Button x:Name="ButtonRefreshStructure"
                                        Command="{Binding RefreshStructureCommand}"
                                        Style="{StaticResource IconButtonStyle}"
                                        ToolTip="Refresh Structure">
                                    <TextBlock Text="{StaticResource RefreshIcon}"
                                               Style="{StaticResource IconTextStyle}"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!-- Content Area with Loading Overlay -->
                    <Grid Grid.Row="1">
                        <!-- Tree View -->
                        <TreeView x:Name="DocumentStructureTreeView"
                                  ItemsSource="{Binding DocumentStructure.Children}"
                                  SelectedItemChanged="DocumentStructureTreeView_SelectedItemChanged"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  Visibility="{Binding IsLoadingStructure, Converter={x:Static local:InverseBooleanToVisibilityConverter.Default}}">
                            <TreeView.Resources>
                                <HierarchicalDataTemplate DataType="{x:Type models:DocumentStructureNode}"
                                                          ItemsSource="{Binding Children}">
                                    <Border Background="{Binding IsHighlighted, Converter={x:Static local:HighlightBackgroundConverter.Instance}}"
                                            CornerRadius="4"
                                            Padding="4,2">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Icon}"
                                                       Margin="0,0,6,0"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Name}"
                                                       VerticalAlignment="Center"
                                                       ToolTip="{Binding TextPreview}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                        </StackPanel>
                                    </Border>
                                </HierarchicalDataTemplate>
                            </TreeView.Resources>
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="TreeViewItem">
                                    <Setter Property="IsExpanded"
                                            Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                    <Setter Property="IsSelected"
                                            Value="{Binding IsSelected, Mode=TwoWay}"/>
                                    <Setter Property="Margin"
                                            Value="0,1"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsHighlighted}"
                                                     Value="True">
                                            <Setter Property="Background"
                                                    Value="{StaticResource SecondaryBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TreeView.ItemContainerStyle>
                        </TreeView>

                        <!-- Loading Animation -->
                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding IsLoadingStructure, Converter={x:Static local:BooleanToVisibilityConverter.Default}}">
                            <!-- Spinning Circle Animation -->
                            <Ellipse Width="40"
                                     Height="40"
                                     Stroke="{StaticResource PrimaryBrush}"
                                     StrokeThickness="3"
                                     StrokeDashArray="8,2"
                                     Margin="0,0,0,16">
                                <Ellipse.RenderTransform>
                                    <RotateTransform x:Name="LoadingRotateTransform"/>
                                </Ellipse.RenderTransform>
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Ellipse.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetName="LoadingRotateTransform"
                                                                 Storyboard.TargetProperty="Angle"
                                                                 From="0"
                                                                 To="360"
                                                                 Duration="0:0:2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>

                            <!-- Loading Text -->
                            <TextBlock Text="Loading document structure..."
                                       HorizontalAlignment="Center"
                                       Style="{StaticResource BodyTextStyle}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,0,8"/>

                            <!-- Progress Dots Animation -->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <Ellipse x:Name="Dot1"
                                         Width="6"
                                         Height="6"
                                         Fill="{StaticResource PrimaryBrush}"
                                         Margin="2"
                                         Opacity="0.3">
                                    <Ellipse.Triggers>
                                        <EventTrigger RoutedEvent="Ellipse.Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                     From="0.3"
                                                                     To="1"
                                                                     Duration="0:0:0.6"
                                                                     AutoReverse="True"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Ellipse.Triggers>
                                </Ellipse>
                                <Ellipse x:Name="Dot2"
                                         Width="6"
                                         Height="6"
                                         Fill="{StaticResource PrimaryBrush}"
                                         Margin="2"
                                         Opacity="0.3">
                                    <Ellipse.Triggers>
                                        <EventTrigger RoutedEvent="Ellipse.Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                     From="0.3"
                                                                     To="1"
                                                                     Duration="0:0:0.6"
                                                                     BeginTime="0:0:0.2"
                                                                     AutoReverse="True"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Ellipse.Triggers>
                                </Ellipse>
                                <Ellipse x:Name="Dot3"
                                         Width="6"
                                         Height="6"
                                         Fill="{StaticResource PrimaryBrush}"
                                         Margin="2"
                                         Opacity="0.3">
                                    <Ellipse.Triggers>
                                        <EventTrigger RoutedEvent="Ellipse.Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                     From="0.3"
                                                                     To="1"
                                                                     Duration="0:0:0.6"
                                                                     BeginTime="0:0:0.4"
                                                                     AutoReverse="True"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Ellipse.Triggers>
                                </Ellipse>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <!-- Node Count -->
                    <TextBlock Grid.Row="2"
                               Text="{Binding DocumentStructure, Converter={x:Static local:NodeCountConverter.Instance}}"
                               HorizontalAlignment="Center"
                               Style="{StaticResource CaptionTextStyle}"
                               Margin="0,12,0,0"/>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="3"
                          Width="8"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"/>

            <!-- XML Preview Panel -->
            <Border Grid.Column="4"
                    Style="{StaticResource ModernCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Panel Header -->
                    <Grid Grid.Row="0"
                          Style="{StaticResource PanelHeaderStyle}">
                        <Grid Margin="20,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="📄 XML Preview"
                                       Style="{StaticResource PanelHeaderTextStyle}"
                                       Margin="0"/>

                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <CheckBox x:Name="CheckBoxFormatted"
                                          Content="Formatted"
                                          IsChecked="{Binding IsFormattedXml}"
                                          Margin="0,0,12,0"/>
                                <Button x:Name="ButtonScrollToSearch"
                                        Command="{Binding ScrollToSearchCommand}"
                                        Style="{StaticResource IconButtonStyle}"
                                        ToolTip="Find and highlight search text in XML">
                                    <TextBlock Text="{StaticResource SearchIcon}"
                                               Style="{StaticResource IconTextStyle}"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!-- XML Editor -->
                    <views:XmlEditor Grid.Row="1"
                                     x:Name="XmlPreviewEditor"
                                     XmlText="{Binding SelectedXml, Mode=OneWay}"
                                     SearchText="{Binding SearchHighlightText, Mode=OneWay}"/>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,16,0,0">
                        <Button x:Name="ButtonCopyXml"
                                Command="{Binding CopyXmlCommand}"
                                Style="{StaticResource ActionButtonStyle}"
                                Width="110"
                                Tag="{StaticResource CopyIcon}">
                            <TextBlock Text="Copy XML"/>
                        </Button>
                        <Button x:Name="ButtonSaveXml"
                                Command="{Binding SaveXmlCommand}"
                                Style="{StaticResource PrimaryActionButtonStyle}"
                                Width="110"
                                Tag="{StaticResource SaveIcon}">
                            <TextBlock Text="Save XML"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="24,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           Style="{StaticResource BodyTextStyle}"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock x:Name="DocumentStatus"
                               Text="{Binding DocumentStatus}"
                               Style="{StaticResource BodyTextStyle}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,16,0"/>
                    <Border Style="{StaticResource StatusIndicatorStyle}"
                            Background="{StaticResource SuccessBrush}"
                            Margin="0,0,6,0"/>
                    <TextBlock Text="Running"
                               Style="{StaticResource CaptionTextStyle}"
                               Margin="0,0,16,0"/>
                    <TextBlock Text="LiveWordXml v1.0"
                               Style="{StaticResource CaptionTextStyle}"
                               Margin="0,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
