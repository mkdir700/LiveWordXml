{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run LiveWordXml.Wpf",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "src/LiveWordXml.Wpf/LiveWordXml.Wpf.csproj"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Run the LiveWordXml WPF application"
        },
        {
            "label": "Build LiveWordXml.Wpf",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "src/LiveWordXml.Wpf/LiveWordXml.Wpf.csproj"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Build the LiveWordXml WPF application"
        },
        {
            "label": "Build Solution",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "LiveWordXml.sln"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Build the entire solution"
        },
        {
            "label": "Clean Solution",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "clean",
                "LiveWordXml.sln"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Clean the solution"
        },
        {
            "label": "Restore Packages",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "restore",
                "LiveWordXml.sln"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Restore NuGet packages for the solution"
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "test",
                "tests/LiveWordXml.Tests/LiveWordXml.Tests.csproj"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Run unit tests"
        }
    ]
} 